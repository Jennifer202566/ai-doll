{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    },
    "server.js": {
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/server.js" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/privacy", "dest": "/privacy.html" },
    { "src": "/terms", "dest": "/terms.html" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "env": {
    "VERCEL": "1"
  }
}
